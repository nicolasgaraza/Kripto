<!DOCTYPE html>
<html ng-app='PartidaModule' >
	<!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">

	<!-- Optional theme -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css">

  <script src="https://code.jquery.com/jquery-1.11.0.min.js"></script>

	<!-- Latest compiled and minified JavaScript -->
	<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>


  <script src="/socket.io/socket.io.js"></script>
  
  <head>
    <title> Partida Numero <%= partidaId %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body >
    <input type="hidden" value="<%= partidaId %>" id="partidaId"/>
	<input type="hidden" value="<%= jugadorActual %>" id="jugadorActual"/>
	
  	<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="/default">La Quinta</a>
        </div>
      </div>
    </div>

    <div class="container" ng-controller="PartidaController">
    	<div class="row">
    		<div class="col-md-10">
    			<!--Contenido de la partida -->
    			<div class="jumbotron">
					<div class="container">
						<div class="container">
							<p>Jugador Remoto</p>
						</div>
					</div>
    				<div class="jumbotron">
						<div class="container">

							  <div class="">
								<div class="row" >
								  <div ng-repeat="carta in cartas" class="col-md-2 carta {{$index === 4 ? 'quinta': ''}}"> 
									<img ng-click="cargarValorCarta($index)" ng-src='/images/cartas/{{carta.Palo}}/{{carta.Numero}}'/>
										Carta: {{carta.Palo}} Palo:{{carta.Numero}}
								  </div>
								 
								</div>
								 <button type="button" ng-click="pausarPartida()" ng-hide="puedePausar()"  class="btn btn-xs btn-primary" >
									Listo
								  </button> 
								
								<!-- <div class="col-md-2 carta">    </div>
								  <div class="col-md-2 carta">    </div>
								  <div class="col-md-2 carta">    </div>
								  <div class="col-md-2 carta quinta"></div>  -->
							  </div>
						</div>
					</div>

					

    			</div>
          <div class="container">
            <div class="container">
              <p>{{jugadorActual}}</p>
            </div>
			<div class="jugada" ng-show="mostrarPanelIndicarJugada">
				
			</div>
          </div>
    		</div>
    		<div class="col-md-2">
    			<h3>Partidas</h3>
    		</div>
    	</div>
    </div>

    <!-- Scripts de angular js -->
	<script src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.14/angular.js' type="text/javascript"></script>
	<script src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.14/angular-route.js' type="text/javascript"></script>

	<script src='/javascripts/PartidaModule.js' type="text/javascript"></script>
  
    
  </body>
</html>